<ExerciseScreen>:
    FloatLayout:

        MDLabel:
            id: ex_name
            pos_hint: {"center_x": 0.28, "top": .99}
            size_hint: (.2, .2)
            font_size: "30sp"
            halign: "left"
            text: "Fitness App"
#            theme_text_color: "Primary"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            opacity: 0

        MDLabel:
            pos_hint: {"center_x": 0.44, "top": 1.0625}
            size_hint: (.5, .2)
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            text: "Inc"

        MDLabel:
            pos_hint: {"center_x": 0.4, "top": 1.0025}
            size_hint: (.5, .2)
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            text: "Barbell"

        MDBoxLayout:
            size_hint: (.4, .1)
            pos_hint: {"center_x": .5, "center_y": .995}

            MyToggleButton:
                text: "+1"
                group: "x"
                size_hint: (.75, .5)
                on_release: root.change_scale(1)
                theme_text_color: "Custom"
                text_color: 1,1,1,1


            MyToggleButton:
                text: "+2.5"
                group: "x"
                size_hint: (.75, .5)
                on_release: root.change_scale(2.5)
                theme_text_color: "Custom"
                text_color: 1,1,1,1

            MyToggleButton:
                text: "+10"
                group: "x"
                size_hint: (.75, .5)
                on_release: root.change_scale(10)
                theme_text_color: "Custom"
                text_color: 1,1,1,1

        MDBoxLayout:
            size_hint: (.4, .1)
            pos_hint: {"center_x": .5, "center_y": .935}

            MyToggleButton:
                text: "None"
                group: "y"
                size_hint: (.75, .5)
                on_release: root.barbell = 0
                theme_text_color: "Custom"
                text_color: 1,1,1,1


            MyToggleButton:
                text: "12.5"
                group: "y"
                size_hint: (.75, .5)
                on_release: root.barbell = 12.5
                theme_text_color: "Custom"
                text_color: 1,1,1,1

            MyToggleButton:
                text: "20"
                group: "y"
                size_hint: (.75, .5)
                on_release: root.barbell = 20
                theme_text_color: "Custom"
                text_color: 1,1,1,1

        MDIconButton:
            icon: 'history'
            pos_hint: {"center_x": 0.925, "top": .998}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            on_release: app.show_exc_history(root.exercise)

        MDIconButton:
            icon: 'help'
            pos_hint: {"center_x": 0.75, "top": .98}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            on_release: root.open_help_dialog()



        MDTextField:
            id: reps
            mode: "rectangle"
            input_filter: 'int'
            helper_text: "Reps"
            helper_text_mode: "persistent"
            pos_hint: {"x": .125, "top": .805}
            size_hint: (.31, .13)
            halign: "center"
            text: "0"
            font_size: "32.5sp"

        MDTextField:
            id: weight
            mode: "rectangle"
            input_filter: 'float'
            helper_text: "Kg" if app.units == "metric" else "Lbs"
            helper_text_mode: "persistent"

            font_size: "32.5sp"
            pos_hint: {"x": .575, "top": .805}
            size_hint: (.31, .13)
            halign: "center"
            text: "0"

        MDIconButton:
            icon: 'chevron-up'
            on_release: root.changeInput("w" , 1)
            size_hint: (.2, .1)
            pos_hint: {"center_x": 0.725, "top": .89}
            user_font_size: "64sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDIconButton:
            icon: 'chevron-up'
            on_release: root.changeInput("r" , 1)
            pos_hint: {"center_x": 0.275, "top": .89}
            user_font_size: "64sp"
            size_hint: (.2, .1)
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDIconButton:
            icon: 'chevron-down'
            on_release: root.changeInput("w" , 0)
            pos_hint: {"center_x": 0.725, "top": .69}
            user_font_size: "64sp"
            size_hint: (.2, .1)
            text_color: 0, 0, 1, 1
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDIconButton:
            icon: 'chevron-down'
            on_release: root.changeInput("r" , 0)
            pos_hint: {"center_x": 0.275, "top": .69}
            size_hint: (.2, .1)
            user_font_size: "64sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color


            MDList:
                size_hint: 0.1, 0.1
                id: md_list
                padding: 0
                pos_hint: {"top": .9}

