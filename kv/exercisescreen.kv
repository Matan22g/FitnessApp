        GridLayout:
            id: control_grid
            cols:3
            pos_hint: {"center_x": .5, "top": .12}
            size_hint_y:0.1
            size_hint_x:0.7

            MDIconButton:
                id: add_exc
                icon: "minus"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                user_font_size: "44sp"
                halign: "center"
                on_release: root.delete_set()
                size_hint: (0.01,2)

            MDIconButton:
                icon: "plus"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                user_font_size: "44sp"
                halign: "center"
                id: load_session
                on_release: root.add_set()
                size_hint: (0.01,2)

            MDIconButton:
                icon: "content-save"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                user_font_size: "44sp"
                halign: "center"
                on_release: root.save_exc()
                size_hint: (0.01,2)

            MDLabel:
                text: "Set"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                font_style: "Caption"
                halign: "center"

            MDLabel:
                text: "Set"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                font_style: "Caption"
                halign: "center"

            MDLabel:
                text: "Save"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                font_style: "Caption"
                halign: "center"
        ScrollView:
            id: sets_scroll
            pos_hint: {"top": .6}
            size_hint_y: None
            size_hint: 1, .47
            GridLayout:
                # sets_grid
                id: sets_grid
                cols: 1
                spacing: 20,10
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '50dp'



