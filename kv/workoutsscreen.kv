#:import toast kivymd.toast.toast

<Tab>:
    ScrollView:
        MDList:
            id: container

<WorkoutsScreen>:
    FloatLayout:

        MDRoundFlatIconButton:
            icon: "plus"
            pos_hint: {"center_x": 0.3, "top": .95}
            text: "Create New Workout"
            width: dp(200)
            on_release:
                app.change_screen1("create_workout_screen")

        MDRoundFlatIconButton:
            icon: "run"
            id: running_session
            pos_hint: {"center_x": 0.8, "top": .95}
            text: "Create"
            width: dp(50)
            opacity: 1
            on_release:
                app.change_screen1("sessionscreen")

        ScrollView:
            pos_hint: {"top": .87}
            size_hint_y: None
            size_hint: 1, 0.85
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 20,20
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '400dp'

