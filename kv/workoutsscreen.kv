#:import toast kivymd.toast.toast

<WorkoutsScreen>:
    FloatLayout:

        MDRoundFlatIconButton:
            icon: "plus"
            pos_hint: {"center_x": 0.5, "top": .95}
            text: "Create New Workout"
            width: dp(200)
            on_release:
                app.change_screen1("create_workout_screen")

        ScrollView:
            pos_hint: {"top": .87}
            size_hint_y: None
            size_hint: 1, .87
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 20,10
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '240dp'

