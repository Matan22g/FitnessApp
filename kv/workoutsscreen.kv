#:import toast kivymd.toast.toast



<WorkoutsScreen>:
    FloatLayout:

        MDRoundFlatIconButton:
            icon: "plus"
            pos_hint: {"center_x": 0.3, "top": .95}
            text: "Create New Workout"
            width: dp(200)
            on_release:
                app.show_create_workout_dialog()


        MDRoundFlatIconButton:
            icon: "run"
            id: running_session
            pos_hint: {"center_x": 0.8, "top": .95}
            text: "Create"
            width: dp(90)
            opacity: 1
            on_release:
                app.back_to_running_session()

        ScrollView:
            pos_hint: {"top": .87}
            size_hint_y: None
            size_hint: 1, 0.85
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 20,10
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '350dp'

