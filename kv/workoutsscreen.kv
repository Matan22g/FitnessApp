#:import toast kivymd.toast.toast

<WorkoutsScreen>:
    FloatLayout:

        MDLabel:
            id: sub_title
            pos_hint: {"center_x": 0.5, "top": 1.}
            size_hint: (.5, .2)
            theme_text_color: "Primary"
            font_style: "H5"
            halign: "center"
            text: "Workouts"

        MDRoundFlatIconButton:
            icon: "plus"
            pos_hint: {"center_x": 0.5, "top": .82}
            text: "Create New Workout"
            width: dp(200)
            on_release:
                app.change_screen1("create_workout_screen")

        ScrollView:
            pos_hint: {"top": .70}
            size_hint_y: None
            size_hint: 1, .7
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 20,40
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '150dp'

