<ExerciseStatsScreen>:
    FloatLayout:
        id: stats_layout

        GridLayout:
            id: buttons_layout
            cols: 3
            pos_hint: {"center_x": 0.5, "top": .87}
            size_hint_y:0.1
            size_hint_x:0.7

#            spacing: 15
            MDIconButton:
                id: left_arrow
                icon: "chevron-left"
                user_font_size: "40sp"
                theme_text_color: "Custom"
                text_color: 0.5,0.5,0.5,1
                size_hint: (0.5,0.075)
                on_release: root.switch_left(*args)

            MDLabel:
                id: curr_label
                text: "Sep"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": 0.63}

            MDIconButton:
                id: right_arrow
                icon: "chevron-right"
                user_font_size: "40sp"
                theme_text_color: "Custom"
                text_color: 0.5,0.5,0.5,1
                on_release: root.switch_left(*args)
                size_hint: (0.5,0.075)

        MDTabs:
            id: md_tabs
            pos_hint: {"center_x": 0.75, "top": 0.96}
            background_color: 0, 0, 0, 0
            text_color_normal: 0, 0, 0, 1
            text_color_active: 1, 1, 1, 1
            color_indicator: 1, 1, 1, 1
            allow_stretch: False
            spacing:100
            tab_indicator_anim: True
            on_tab_switch: print(3)
            opacity:1
            on_tab_switch: root.on_tab_switch(*args)
            size_hint_y:0.1

            Tab:
                text: '[size=' + str(app.headline_text_size)+']Year[/size]'

            Tab:
                text: '[size=' + str(app.headline_text_size)+']Month[/size]'


