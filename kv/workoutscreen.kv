<AddExerciseContent>
    orientation: "vertical"
    spacing: "20dp"
    size_hint_y: None
    height: "33dp"



<WorkoutScreen>:
    FloatLayout:

        MDTabs_custom:
            size_hint: 1, .65
            pos_hint: {"top": 0.9875}
            id: split_tabs
            on_tab_switch: root.on_tab_switch(*args)
            background_color: 0, 0, 0, 0
            text_color_normal: 0, 0, 0, 1
            text_color_active: 0, 0, 1, 1
            color_indicator: 0, 0, 1, 1
            elevation: 0
            tab_indicator_anim: True
            lock_swiping: True

        MDIconButton:
            pos_hint: {"center_x": 0.9, "top": 1}
            id: add_split
            icon: "plus"
            user_font_size: "35sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release:
                root.add_split()

        ScrollView:
            id: scroll
            pos_hint: {"top": .9}
            size: self.size
            size_hint: 1., .77
            GridLayout:
                # Banner grid
                id: exc_cards
                cols: 1
                spacing: 20,0
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '125dp'


        MDIconButton:
            pos_hint: {"center_x": 0.5, "top": .125}
            id: edit_workout
            icon: "pencil"
            user_font_size: "40sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release:
                root.show_view_buttons(False)
                root.show_edit_buttons(True)
                root.edit_mode = 1

        MDIconButton:
            pos_hint: {"center_x": 0.75, "top": .135}
            id: start_session
            icon: "play"
            user_font_size: "55sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release:
                root.start_session()

        MDIconButton:
            pos_hint: {"center_x": 0.25, "top": .135}
            id: delete_workout
            icon: "trash-can-outline"
            user_font_size: "55sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release:
                app.delete_workout_msg(root.workout_key)

        MDRoundFlatIconButton:
            pos_hint: {"center_x": 0.3, "top": .1}
            id: add_exc
            text: "Exercise"
            icon: "plus"
            user_font_size: "40sp"
            on_release:
                root.show_add_exercise_dialog()


        MDRoundFlatIconButton:
            pos_hint: {"center_x": 0.7, "top": .1}
            id: del_split
            text: "Split " + str(root.split_active)
            icon: "trash-can-outline"
            user_font_size: "50sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release:
                root.show_del_split_dialog()

