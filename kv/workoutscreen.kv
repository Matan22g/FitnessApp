<AddExerciseContent>
    orientation: "vertical"
    spacing: "20dp"
    size_hint_y: None
    height: "33dp"




<WorkoutScreen>:
    FloatLayout:
        on_touch_down:
        #backgroung press hides checkboxes
            caller = args[0]
            touch = args[1]
#            print(touch.spos)
            root.stop_add_split_animation()
#            if touch.spos[1]>0.92 and touch.spos[0]>0.2: root.stop_add_split_animation()
#            if touch.spos[1]>0.83 and touch.spos[1]<0.92 and touch.spos[0]<0.77: root.stop_add_split_animation()

        MDTabs_custom:
            size_hint: 1, .65
            pos_hint: {"x": 0.05,"top": 0.95}
            id: split_tabs
            on_tab_switch: root.on_tab_switch(*args)
            background_color: 0, 0, 0, 0
            text_color_normal: app.tabs_text_color_normal
            text_color_active: app.tabs_text_color_active
            color_indicator: app.tabs_color_indicator
            elevation: 0
            tab_indicator_anim: True
            lock_swiping: True
            allow_stretch: False

        MDIconButton:
            pos_hint: {"center_x": 0.93, "top": 0.953}
            id: add_split
            icon: "plus"
            size_hint: (0.12,0.075)
            user_font_size: "35sp"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            on_release:
                root.add_split()

        ScrollView:
            id: scroll
            pos_hint: {"top": .8725}
            size: self.size
            size_hint: 1., .745 + app.bottom_buttons_inc
            GridLayout:
                # Banner grid
                id: exc_cards
                cols: 1
                spacing: 20,0
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '125dp'


        GridLayout:
            id: buttons_layout
            cols: 3
            pos_hint: {"center_x": 0.5, "top": .125 - app.bottom_buttons_inc}
            size_hint_y:0.1
#            spacing: 15
            MDIconButton:
                id: delete_workout
                icon: "trash-can-outline"
                user_font_size: "44sp"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                on_release:
                    app.delete_workout_msg(root.workout_key)
                size_hint: (0.12,0.075)

            MDIconButton:
                id: edit_workout
                icon: "pencil"
                user_font_size: "44sp"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                on_release:
                    root.show_view_buttons(False)
                    root.show_edit_buttons(True)
                    root.edit_mode = 1
                size_hint: (0.12,0.075)

            MDIconButton:
                id: start_session
                icon: "play"
                user_font_size: "47sp"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                on_release:
                    root.start_session() if not app.running_session else root.show_start_workout_dialog()
                size_hint: (0.12,0.075)

