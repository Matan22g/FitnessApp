        GridLayout:
            id: edit_grid
            cols:3
            pos_hint: {"center_x": .5, "top": .12 - app.bottom_buttons_inc}
            size_hint_y:0.1

            MDIconButton:
                icon: "trash-can-outline"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                user_font_size: "44sp"
                halign: "center"
                size_hint: (0.01,2)
                on_release:
                    root.show_del_split_dialog()

            MDIconButton:
                icon: "plus"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                user_font_size: "44sp"
                halign: "center"
                id: load_session
                size_hint: (0.01,2)
                on_release:
                    root.show_add_exercise_dialog()

            MDIconButton:
                icon: "content-save"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                user_font_size: "44sp"
                halign: "center"
                size_hint: (0.01,2)
                on_release:
                    root.show_save_workout_dialog()

