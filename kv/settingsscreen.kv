<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)


<SettingsScreen>:

    FloatLayout:

        BoxLayout:
            orientation:'vertical'
            pos_hint: {"center_x": .5, "center_y": .76}
            size_hint: 1, 0.2
            spacing: 20
            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.15

                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "weight"
                    size_hint_x: 0.15
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "Units"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.6

                MDBoxLayout:
                    halign: "right"
                    size_hint_x: 0.4
                    size_hint_y: 1.8

                    MyToggleButton:
                        size_hint: (.75, .5)

                        id: kg_button
                        text: "Kg"
                        group: "y"
                        background_down : (0, 0, 1, 1)
                        background_normal : (0.5, 0.5, 0.5, 1)
                        on_release:
                            app.units= 'metric'
                            app.upload_settings()

                    MyToggleButton:
                        size_hint: (.75, .5)

                        id: lbs_button
                        text: "lbs"
                        group: "y"
                        background_down : (0, 0, 1, 1)
                        background_normal : (0.5, 0.5, 0.5, 1)
                        on_release:
                            app.units= 'imperial'
                            app.upload_settings()


            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.15
                on_release: app.show_change_user_name_dialog()
                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "account"
                    size_hint_x: 0.14
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "User name"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.5

                MDLabel:
                    id: user_name_label
                    text: "Matan22g"
#                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "right"
                    size_hint_x: 0.5

