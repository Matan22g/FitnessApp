<SettingsScreen>:

    FloatLayout:

        MDLabel:
            pos_hint: {"x": .3, "top": .9}
            size_hint: (.2, .1)
            text: "Dark Mode: "
            halign: "center"
            theme_text_color: "Primary"

        MDSwitch:
            id: mode
            pos_hint: {"x": .6, "top": .9}
            size_hint: (.05, .1)
            on_active:
                root.change_mode(*args)

        MDRoundFlatButton:
            pos_hint: {"x": .35, "y": .7}
            size_hint: (.3, .1)
            text: "Change Theme"
            on_release: root.show_theme_picker()
#            on_release: root.is_binary(binary_number.text)
