<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)


<SettingsScreen>:

    FloatLayout:
        MDIcon:
            pos_hint: {"center_x": 0.9, "top": 1.4425}
            icon: "cog"
            font_size: "80sp"
            theme_text_color: "Custom"
            text_color: 1,1,1,1

        BoxLayout:
            orientation:'vertical'
            pos_hint: {"center_x": .5, "top": .87}
            size_hint: 1, 0.34
            spacing: 10
            padding: '5dp'
            MDLabel:
                text: "  GENERAL"
                font_style: "H6"
                theme_text_color: "Secondary"
                halign: "left"
                size_hint_y: 0.1
            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.1

                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "weight"
                    size_hint_x: 0.15
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "Units"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.6

                MDBoxLayout:
                    halign: "right"
                    size_hint_x: 0.4
                    size_hint_y: 1.8

                    MyToggleButton:
                        size_hint: (.75, .5)
                        id: kg_button
                        text: "Kg"
                        group: "y"
                        background_down : (0, 0, 1, 1)
                        background_normal : (0.5, 0.5, 0.5, 1)
                        on_release:
                            app.units= 'metric'
                            app.upload_settings()

                    MyToggleButton:
                        size_hint: (.75, .5)
                        id: lbs_button
                        text: "lbs"
                        group: "y"
                        background_down : (0, 0, 1, 1)
                        background_normal : (0.5, 0.5, 0.5, 1)
                        on_release:
                            app.units= 'imperial'
                            app.upload_settings()


            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.1
                on_release: app.show_change_user_name_dialog()
                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "account"
                    size_hint_x: 0.14
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "User name"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.5

                MDLabel:
                    id: user_name_label
                    text: "Matan22g"
#                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "right"
                    size_hint_x: 0.5
                    font_size: "20dp"

            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.1
                on_release: app.show_update_weight_dialog()
                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "scale"
                    size_hint_x: 0.14
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "Weight"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.5

                MDLabel:
                    id: settings_weight_label
                    text: "0 Kg"
                    font_size: "20dp"

#                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "right"
                    size_hint_x: 0.5

        BoxLayout:
            orientation:'vertical'
            pos_hint: {"center_x": .5, "top": .52}
            size_hint: 1, 0.25
            spacing: 10
            padding: '5dp'

            MDLabel:
                text: "  ACCOUNT"
                font_style: "H6"
                theme_text_color: "Secondary"
                halign: "left"
                size_hint_y: 0.1


            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.1
                on_release: app.on_logout()

                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "logout"
                    size_hint_x: 0.08
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "Log out"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.5

            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.1
                on_release: app.show_ok_cancel_msg(app.delete_account, app.dismiss_dialog, "Do you wish to delete your account?", "Warning: Deleting your account cannot be undone, all your workout data will be lost.")

                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "trash-can-outline"
                    size_hint_x: 0.08

#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "Delete account"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.5

        BoxLayout:
            orientation:'vertical'
            pos_hint: {"center_x": .5, "top": .25}
            size_hint: 1, 0.2
            spacing: 10
            padding: '5dp'
            MDLabel:
                text: "  FEEDBACK"
                font_style: "H6"
                theme_text_color: "Secondary"
                halign: "left"
                size_hint_y: 0.1


            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.1
                on_release: app.show_content_msg(app.send_email, app.dismiss_dialog,"Report a Bug",1,"SEND")
                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "bug-outline"
                    size_hint_x: 0.08
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "Report a bug"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.5

            MDCard:
                orientation: "horizontal"
                padding: "8dp"
                size_hint: 1, 0.1
                on_release: app.show_content_msg(app.send_email, app.dismiss_dialog,"Send Feedback",1,"SEND")
                MDIcon:
                    id: unit_icon
                    theme_text_color: "Custom"
#                        text_color: 1,1,1,1
                    icon: "send-outline"
                    size_hint_x: 0.08
#                        text_color: 1, 1, 1, 1

                MDLabel:
                    text: "Send feedback"
                    font_style: "H6"
#                        theme_text_color: "Custom"
#                        text_color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 0.5
