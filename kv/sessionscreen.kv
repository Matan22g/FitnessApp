        MDRoundFlatIconButton:
            id: save_exc
            width: dp(120)
            pos_hint: {"center_x": .76, "top": .1}
            text: "Save"
            width: dp(140)
            icon: "content-save"
            on_release: root.save_session()
            opacity:0


