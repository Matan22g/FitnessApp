<WorkoutsScreen>:
    ScrollView:
        FloatLayout:
            MDLabel:
                id: sub_title
                pos_hint: {"center_x": 0.5, "top": .98}
                size_hint: (.5, .2)
                theme_text_color: "Primary"
                font_style: "H5"
                halign: "center"
                text: "Welcome to Workouts Screen"

            MDFloatingActionButton:
                icon: "plus"
                pos_hint: {"x": .75, "y": .70}
                md_bg_color: app.theme_cls.primary_color
                elevation_normal: 8
                on_release: root.addexercise()

            MDFloatingActionButton
                icon: "minus"
                pos_hint: {"x": .12, "y": .70}
                md_bg_color: app.theme_cls.primary_color
                elevation_normal: 8
                on_release: root.deleteworkout()


            MDRaisedButton:
                pos_hint: {"x": .75, "y": .02}
                size_hint: (.2, .2/3)
                text: "Save"
                on_release:
                    if root.saveworkout(): \
                    Snackbar(text="workout saved!").show();

            MDTextField:
                id: ex0
                opacity:1
                pos_hint: {"x": .35, "y": .70}
                size_hint: (.3, .1)
                halign: "center"
                hint_text: "Workout Name"

