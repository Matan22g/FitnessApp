<PreviousWorkoutsScreen>:
    FloatLayout:
        on_touch_down:
        #backgroung press hides checkboxes
            caller = args[0]
            touch = args[1]
            if touch.spos[1]>0.85 and touch.spos[0]<0.75: root.show_checkbox("False")
            if touch.spos[1]>0.93: root.show_checkbox("False")



        MDIconButton:
            id: date_button
            pos_hint: {"center_x": .83, "top": 1.005}
            icon: "tune"
            user_font_size: "25sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release: root.choose_date()

        MDLabel:
            id: month_to_view
            pos_hint: {"center_x": 0.57, "top":1.05}
            size_hint: (1, .2)
            font_style: "H5"
            text: "Jul"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDLabel:
            id: num_to_delete
            pos_hint: {"center_x": 1.0175, "top":1.02}
            size_hint: (.47, .15)
            font_size: "16sp"
            halign: "left"
            text: "5"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDIconButton:
            id: delete_sessions
            pos_hint: {"center_x": 0.8525, "top":1.015}
            icon: "trash-can-outline"
            user_font_size: "32sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release: root.show_del_exercise_dialog()

        ScrollView:
            id: sessions_scroll
            pos_hint: {"top": .92}
            size_hint_y: None
            size_hint: 1, .87
            GridLayout:
                # sets_grid
                id: sessions_grid
                cols: 1
                spacing: 20,10
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '100dp'