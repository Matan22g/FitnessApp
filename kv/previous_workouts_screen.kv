<PreviousWorkoutsScreen>:
    FloatLayout:
        on_touch_down:
        #backgroung press hides checkboxes
            caller = args[0]
            touch = args[1]
            if touch.spos[1]>0.8 and touch.spos[0]<0.79: root.show_checkbox("False")
            if touch.spos[1]>0.875: root.show_checkbox("False")


        MDLabel:
            pos_hint: {"center_x": 0.57, "top":1.05}
            size_hint: (1, .2)
            font_style: "H5"
            text: "Recent Workouts"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDIconButton:
            id: date_button
            pos_hint: {"center_x": .88, "top": .94}
            icon: "chart-box-outline"
            user_font_size: "25sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release: root.choose_date()

        MDLabel:
            id: month_to_view
            pos_hint: {"center_x": 0.57, "top":1.0}
            size_hint: (1, .2)
            font_style: "H6"
            text: "Jul"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDLabel:
            id: num_to_delete
            pos_hint: {"center_x": 1.04, "top":0.975}
            size_hint: (.47, .15)
            font_size: "16sp"
            halign: "left"
            text: "5"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        MDIconButton:
            id: delete_sessions
            pos_hint: {"center_x": 0.88, "top":0.95}
            icon: "trash-can-outline"
            user_font_size: "32sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release: root.show_del_exercise_dialog()

        ScrollView:
            id: sessions_scroll
            pos_hint: {"top": .87}
            size_hint_y: None
            size_hint: 1, .87
            GridLayout:
                # sets_grid
                id: sessions_grid
                cols: 1
                spacing: 20,3
                size_hint_y: None
                height: self.minimum_height
                row_force_default: True
                row_default_height: '100dp'