    FloatLayout:
        GridLayout:
            cols: 3
            pos_hint: {"center_x": .5, "center_y": 0.94}
            size_hint_y: 0.125
            MDLabel:
                id: sub_title
                font_style: "H4"
                halign: "center"
                text: "12"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "H4"
                halign: "center"
                text: "3"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "H4"
                halign: "center"
                text: "80"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Monthly\nWorkouts"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
#['H1', 'H2', 'H3', 'H4', 'H5', 'H6', 'Subtitle1', 'Subtitle2', 'Body1', 'Body2', 'Button', 'Caption', 'Overline', 'Icon']
            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Weekly\nWorkouts"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Weight\n"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

        MDLabel:
            id: sub_title
            halign: "center"
            text: "kg"
            font_style:"Caption"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": .93, "center_y": .96}

        MDCard:
            orientation: "horizontal"
            padding: "8dp"
            size_hint: 1, 0.15
            pos_hint: {"center_x": .5, "center_y": .8}
            BoxLayout:
                orientation:"vertical"
                size_hint_x:0.3
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "resources/loginback1.png"
                MDLabel:
                    text: "May"
                    font_style: "H5"

                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"

                MDLabel:
                    text: "22"
                    font_style: "H6"

                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"
            BoxLayout:
                orientation: "vertical"
                spacing: 20
                MDLabel:
                    text: "Last Workout"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign:"center"

                MDLabel:
                    text: "ABC"
                    font_style: "H4"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 1, 1
                    halign: "center"

                MDLabel:
                    text: "7 exercises completed"
                    font_style: "Caption"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign: "center"

            MDIconButton:
                icon: "chevron-right"
                halign: "right"
                on_release: print(3)
                user_font_size: "35sp"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1

        MDSeparator:
            height: "1dp"





        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "280dp", "140dp"
            pos_hint: {"center_x": .5, "center_y": .34}

            MDLabel:
                text: "Current Streak"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]

            MDSeparator:
                height: "1dp"

            MDLabel:
                theme_text_color: "Primary"
                text: "Streak1\nLast Streak was number, Do your best to break it!"

