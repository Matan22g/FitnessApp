    FloatLayout:
        GridLayout:
            cols: 3
            pos_hint: {"center_x": .5, "center_y": 0.94}
            size_hint_y: 0.1

            MDLabel:
                id: sub_title
                font_style: "H4"
                halign: "center"
                text: "12"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "H4"
                halign: "center"
                text: "3"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "H4"
                halign: "center"
                text: "80"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Monthly\nWorkouts"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
#['H1', 'H2', 'H3', 'H4', 'H5', 'H6', 'Subtitle1', 'Subtitle2', 'Body1', 'Body2', 'Button', 'Caption', 'Overline', 'Icon']
            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Weekly\nWorkouts"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Weight\n"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

        MDLabel:
            id: sub_title
            halign: "center"
            text: "Kg"
            font_style:"Caption"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": .93, "center_y": .96}

        MDCard:
            orientation: "horizontal"
            padding: "8dp"
            size_hint: 1, 0.15
            pos_hint: {"center_x": .5, "center_y": .8}
            on_release: app.view_session(app.last_session_date)

            BoxLayout:
                orientation:"vertical"
                size_hint_x:0.3
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "resources/loginback1.png"
                MDLabel:
                    id: last_session_month
                    text: ""
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"

                MDLabel:
                    id: last_session_day
                    text: ""
                    font_style: "H6"

                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"
            BoxLayout:
                orientation: "vertical"
                spacing: 20
                MDLabel:
                    text: "Last Workout"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign:"center"

                MDLabel:
                    id: last_session_name
                    text: "ABC"
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 1, 1
                    halign: "center"

                MDLabel:
                    id: session_exc_completed
                    text: "7 exercises completed"
                    font_style: "Caption"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign: "center"

            MDIconButton:
                icon: "chevron-right"
                halign: "right"
                on_release: print(3)
                user_font_size: "50sp"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1
                on_release: app.view_session(app.last_session_date)
                size_hint: (0.4,1)

        MDSeparator:
            height: "1dp"
            pos_hint: {"center_x": .5, "center_y": 0.6}
            color: 0,0,0,1
            size_hint_x:0.7
        MDLabel:
            text: "Exercises Statistics:"
            font_style: "H5"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": 0.63}


        ScrollView:
            pos_hint: {"center_x": .5, "center_y": 0.05}
            MDBoxLayout:
                id: chart_box
                adaptive_height: True
                spacing: dp(5)
                padding:dp(5)
                orientation: 'vertical'

                AKPieChart:
                    id: piechart
                    items: app.exc_pie_dic
                    pos_hint: {'center_x': 0.5, 'center_y': .5}
                    size_hint:[None,None]
                    size:(dp(300),dp(300))


