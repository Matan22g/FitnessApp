    FloatLayout:

        MDLabel:
            id: sub_title
            pos_hint: {"center_x": 0.5, "top": .98}
            size_hint: (.5, .2)
            font_style: "H3"
            halign: "center"
            text: "Fitness App"
            theme_text_color: "Primary"
#            theme_text_color: "Custom"
#            text_color: 0, 1, 1, 1

        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "280dp", "140dp"
            pos_hint: {"center_x": .5, "center_y": .64}


            MDLabel:
                text: "Recent Workouts"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]

            MDSeparator:
                height: "1dp"

            MDLabel:
                theme_text_color: "Primary"
                text: "Workout1\nWorkout2"

            BoxLayout:
                orientation: "horizontal"
                spacing: 90
                MDTextButton:
                    text: "Add Workout"
                    on_release: root.addworkout()

                MDTextButton:
                    text: "Add Workout"
                    on_release: root.choose_date()
                    size_hint_x: None
                    size: self.texture_size
                    pos_hint: {'right': 1}



        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "280dp", "140dp"
            pos_hint: {"center_x": .5, "center_y": .34}

            MDLabel:
                text: "Current Streak"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]

            MDSeparator:
                height: "1dp"

            MDLabel:
                theme_text_color: "Primary"
                text: "Streak1\nLast Streak was number, Do your best to break it!"

