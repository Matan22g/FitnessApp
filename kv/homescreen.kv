#:import utils kivy.utils
<HomeScreen>:
#    canvas.before:
#        Rectangle:
#            pos: self.pos
#            size: self.size
#            source: "resources/welcome4.png"

    FloatLayout:
        id: home_layout
        GridLayout:
            cols: 3
            pos_hint: {"center_x": .5, "center_y": 0.927}
            size_hint_y: 0.1

            MDLabel:
                id: monthly_sessions
                font_style: "H4"
                halign: "center"
                text: "12"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: weekly_sessions
                font_style: "H4"
                halign: "center"
                text: "3"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDTextButton:
                id: personal_weight
                font_size: "35dp"
                halign: "right"
                text: "80"
                custom_color: 1, 1, 1, 1
                size_hint:0.3,0.4
                on_press:
                    app.show_update_weight_dialog()

            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Monthly\nWorkouts"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
#['H1', 'H2', 'H3', 'H4', 'H5', 'H6', 'Subtitle1', 'Subtitle2', 'Body1', 'Body2', 'Button', 'Caption', 'Overline', 'Icon']
            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Weekly\nWorkouts"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDLabel:
                id: sub_title
                font_style: "Caption"
                halign: "center"
                text: "Weight\n" +'(' + weight_units.text + ')'
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

        MDLabel:
            id: weight_units
            halign: "center"
            text: "Kg" if app.units == "metric" else "Lbs"
            font_style:"Caption"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": .91, "center_y": .96}
            opacity:0

        MDCard:
            orientation: "horizontal"
            padding: "8dp"
            size_hint: 1, 0.15
            pos_hint: {"center_x": .5, "center_y": .0}
            on_release: app.view_session(app.last_session_date)
            opacity : 0
            BoxLayout:
                orientation:"vertical"
                size_hint_x:0.3
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "resources/loginback1.png"
                MDLabel:
                    id: last_session_month
                    text: ""
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"

                MDLabel:
                    id: last_session_day
                    text: ""
                    font_style: "H6"

                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"
            BoxLayout:
                orientation: "vertical"
                spacing: 20
                MDLabel:
                    text: "Last Workout"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign:"center"

                MDLabel:
                    id: last_session_name
                    text: "N/A"
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 1, 1
                    halign: "center"

                MDLabel:
                    id: session_exc_completed
                    text: "Go Train"
                    font_style: "Caption"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign: "center"

            MDIconButton:
                icon: "chevron-right"
                halign: "right"
                on_release: print(3)
                user_font_size: "50sp"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1
                on_release: app.view_session(app.last_session_date)
                size_hint: (0.4,1)



        BoxLayout:
            orientation:'horizontal'
            pos_hint: {"x": -.335, "center_y": 0.83}
            size_hint_y:0.03
            size_hint_x: 1.25

            MDLabel:
                text: "Recent Workouts"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                halign: "center"
                size_hint_x: 1.2

            MDTextButton:
                text: "See All"
                custom_color: 0, 0, 1, 1
                font_style: 'caption'
                on_release:
                    app.root.ids['bottom_nav'].switch_tab('2')


        MDLabel:
            id: no_workout_label
            text: "You have not done any workout yet\nGo to the Gym! "
            font_style: "H6"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            halign: "center"
            pos_hint: {"center_y": 5, "center_y": 0.72}

        ScrollView:
            id: last_sessions
            pos_hint: {"y": .33, "center_x": .55}
            size_hint_y: None
            size_hint_x: None
            size_hint: 1, .48
            do_scroll_y: False
            do_scroll_x: True
            scroll_type:['content']
            bar_color: [0,0,0,0]
            bar_inactive_color:[0,0,0,0]
            GridLayout:
                # sets_grid
                id: records_grid
                cols: 2
                rows: 1
                padding: 30,0
                spacing: 60,20
                size_hint_y: None
                size_hint_x: None
                height: self.minimum_height
                width: self.minimum_width
                row_force_default: True
                row_default_height: '240dp'


                MDCard:
                    id: last_session_card
                    elevation: 0
                    radius:[80]
                    orientation: "vertical"
                    padding: [50, 40, 50, 0]  # [padding_left, padding_top,padding_right, padding_bottom].
                    spacing: 1
                    size_hint: None, None
                    size: "160dp", "230dp"
                    background : "resources/welcome1.png"
                    MDLabel:
                        id: last_session_date
                        text: "Mon, Sep 27"
                        font_style: "Caption"
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                        halign: "left"
                        size_hint_y:0.1
                    MDLabel:
                        id: last_space
                        text: ""
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                        font_style:"H4"
                        halign:'left'
                        pos_hint: {"center_x": .5, "center_y": 0.25}
                        size_hint_y:2

                    MDLabel:
                        id: last_session_name
                        text: "FBW"
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                        font_style:"H4"
                        halign:'left'
                        pos_hint: {"center_x": .5, "center_y": 0.25}
                        size_hint_y:1

                    MDSeparator:
                        height: "1dp"
                        color: 1,1,1,1
                        pos_hint: {"center_x": .5}
                        size_hint_x: 1.25

                    GridLayout:
                        # sets_grid
                        id: records_grid
                        cols: 3
                        rows: 1
                        size_hint_y:0.7

                        MDIconButton:
                            icon: "eye"
                            user_font_size: "20sp"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            size_hint_y:7.5
                            size_hint_x:1.1
                            on_release:root.view_recent_session(1)

                        MDSeparator:
                            height: "1dp"
                            color:0,0,0,1
                            orientation: "vertical"
                            size_hint_y:0.1

                        MDIconButton:
                            icon: "play"
                            user_font_size: "30sp"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            size_hint_y:7.5
                            size_hint_x:1
                            on_release:root.start_recent_session(1)


                MDCard:
                    id: prev_last_session_card
                    elevation: 0
                    radius:[80]
                    orientation: "vertical"
                    padding: [50, 40, 50, 0]  # [padding_left, padding_top,padding_right, padding_bottom].
                    spacing: 1
                    size_hint: None, None
                    size: "160dp", "230dp"
                    background : "resources/welcome3.png"
                    MDLabel:
                        id: prev_last_session_date
                        text: "Mon, Sep 27"
                        font_style: "Caption"
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                        halign: "left"
                        size_hint_y:0.1
                    MDLabel:
                        id: prev_last_space
                        text: ""
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                        font_style:"H4"
                        halign:'left'
                        pos_hint: {"center_x": .5, "center_y": 0.25}
                        size_hint_y:2

                    MDLabel:
                        id: prev_last_session_name
                        text: "ABC"
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                        font_style:"H4"
                        halign:'left'
                        pos_hint: {"center_x": .5, "center_y": 0.25}
                        size_hint_y:1

                    MDSeparator:
                        height: "1dp"
                        color: 1,1,1,1
                        pos_hint: {"center_x": .5}
                        size_hint_x: 1.25

                    GridLayout:
                        # sets_grid
                        id: buttons_grid
                        cols: 3
                        rows: 1
                        size_hint_y:0.7

                        MDIconButton:
                            icon: "eye"
                            user_font_size: "20sp"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            size_hint_y:7.5
                            size_hint_x:1.1
                            on_release:root.view_recent_session(2)

                        MDSeparator:
                            height: "1dp"
                            color:0,0,0,1
                            orientation: "vertical"
                            size_hint_y:0.1

                        MDIconButton:
                            icon: "play"
                            user_font_size: "30sp"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            size_hint_y:7.5
                            size_hint_x:1
                            on_release:root.start_recent_session(2)




        BoxLayout:
            orientation:'horizontal'
            pos_hint: {"x": .03, "center_y": 0.45}
            size_hint_y:0.2
            size_hint_x: 0.7

            MDLabel:
                text: "Exercises Statistics"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                halign: "center"

            MDLabel:
                text: "(Past 30 Days)"
#                theme_text_color: "Custom"
#                text_color: 0, 0, 1, 1
                font_style:"Caption"
                size_hint_y: 0.9
                size_hint_x: 0.5
                theme_text_color: "Secondary"

        ScrollView:
            pos_hint: {"center_x": .5, "center_y": -0.080}
            MDBoxLayout:
                id: chart_box
                adaptive_height: True
                spacing: dp(5)
                padding:dp(5)
                orientation: 'vertical'

                AKPieChart:
                    id: piechart
                    items: [{"None": 100}]
                    pos_hint: {'center_x': 0.5, 'center_y': .5}
                    size_hint:[None,None]
                    size:(dp(300),dp(300))


