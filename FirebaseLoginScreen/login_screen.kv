#:import utils kivy.utils


<ClickableTextFieldRound>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        height:0.5
        id: text_field
        hint_text: root.hint_text
        text: root.text
        mode: "fill"
        line_color_focus: 1, 1, 1, 1
        icon_right_color: 1, 1, 1, 1
        current_hint_text_color:0.7,0.7,0.7,1
        fill_color: 1, 1, 1, .2

        password: True
        color_active: app.theme_cls.primary_light
#        icon_left: "lock"
#        icon_left_color: app.theme_cls.primary_color
#        on_focus: self.icon_left_color = self.theme_cls.primary_color
        input_filter: app.proper_input_filter

        padding:
            dp(7.5), dp(30), self._lbl_icon_right.texture_size[1] + dp(20),  dp(15)

    MDIconButton:
        icon: "eye-off"
        theme_text_color: "Custom"
        text_color: 1,1,1,0.7
        ripple_scale: .5
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True


<MyAKOnboardingItem@AKOnboardingItem>
    source: ''
    text: ''
    title: ''


    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: root.source

        MDGridLayout:
            cols:1
            rows:2
            orientation: 'vertical'
            padding: dp(10)
            pos_hint: {'center_x': .5, 'top': 0.5}
            row_force_default: True
            row_default_height: '80dp'
            size_hint_x: 1
            size_hint_y: 0.55
            canvas.before:

                Color:
                    rgba: 1,1,1,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0,0,0,0]

            MDLabel:
                text: root.title
                bold: True
                pos_y: 0.3
                theme_text_color: "Custom"
                text_color:  utils.get_color_from_hex("#8EADFF")
                font_style: 'H4'
                halign: 'center'
                valign: 'center'

            MDLabel:
                size_hint_y: None
                theme_text_color: "Custom"
                text_color: 0,0,0,1
                font_style: 'H6'
                halign: 'center'
                valign: 'center'
                text: root.text




<MyBackdropFrontLayer@Screen>
    id: Front
    FloatLayout:
        MDLabel:
            id: sign_in_label
            text: "Sign in"
            pos_hint: {"center_x": 0.5, "center_y": 1.03}
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            font_style: 'H4'
            halign: 'center'
            valign: 'center'

        MDTabs:
            id: md_tabs
            pos_hint: {"center_x": 0.72, "top": 1.025}
            background_color: 0, 0, 0, 0
            text_color_normal: app.tabs_text_color_normal
            text_color_active: app.tabs_text_color_active
            color_indicator: app.tabs_color_indicator
            allow_stretch: False
            spacing:100
            tab_indicator_anim: True
            tab_indicator_height: dp(3)
            on_tab_switch: root.parent.parent.parent.parent.parent.on_tab_switch(*args)
            opacity:0
            disabled:True
            Tab:
                text: '[size=' + str(app.headline_text_size)+']Sign in[/size]'

            Tab:
                text: '[size=' + str(app.headline_text_size)+']Sign up[/size]'

        MDTextField:
            id: email
            pos_hint: {"center_x": .5, "center_y": .8}
            hint_text: "  Username or email"
            mode: "fill"
            color_mode: 'custom'
            size_hint_x: 0.9
            line_color_focus: 1, 1, 1, 1
            icon_right_color: 1, 1, 1, 0.7
            current_hint_text_color:0.7,0.7,0.7,1
            fill_color: 1, 1, 1, .2
            input_filter: app.proper_email_filter


#        MDTextFieldRound:
#            icon_left: "email"
#            hint_text: "  Email or User name"
#            size_hint_x: 0.7
##            size_hint_y: 0.1
#            pos_hint: {"center_x": .5, "center_y": .8}
#            normal_color: 1,1,1,1
#            color_active: 1,1,1,1
#            elevation: 10
#            icon_left_color: app.theme_cls.primary_color
#            on_focus: self.icon_left_color = self.theme_cls.primary_color
#            input_filter: app.proper_email_filter
        MDTextField:
            id: username
            pos_hint: {"center_x": .5, "center_y": .65}
            hint_text: "  Username"
            mode: "fill"
            color_mode: 'custom'
            size_hint_x: 0.9
            line_color_focus: 1, 1, 1, 1
            icon_right_color: 1, 1, 1, 0.7
            current_hint_text_color:0.7,0.7,0.7,1
            fill_color: 1, 1, 1, .2
            input_filter: app.proper_input_filter
            opacity: 0

#        MDTextFieldRound:
#            id: username
#            icon_left: "account"
#            hint_text: "  Username"
#            size_hint_x: 0.9
#            opacity: 0
#            normal_color: 1,1,1,1
#            color_active: 1,1,1,1
#            elevation: 10
#            icon_left_color: app.theme_cls.primary_color
#            on_focus: self.icon_left_color = self.theme_cls.primary_color
#            input_filter: app.proper_input_filter

        ClickableTextFieldRound:
            icon_right_color: app.theme_cls.primary_color
            size_hint_x: 0.9
            id: password
            hint_text: "  Password"
            pos_hint: {"center_x": .5, "center_y": .65}
            normal_color: 1,1,1,1
            color_active: 1,1,1,1
            elevation: 10


        MDRoundFlatButton:
            id: sign_in_button
            text: "Sign in"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint: (.75, .1)
            font_size: 20
            md_bg_color: 1, 1, 1, 0.9
            elevation: 25
            on_release:
                root.parent.parent.parent.parent.parent.parent.parent.display_loading_screen()
                root.parent.parent.parent.parent.parent.parent.parent.sign_in(email.text,password.children[1].text) if self.text =="Sign in" else root.parent.parent.parent.parent.parent.parent.parent.sign_up(email.text, username.text, password.children[1].text)

        MDTextButton:
            id: forget_pass
            text: "Forgot password?"
            custom_color: 1, 1, 1, 1
            font_style: 'caption'
            underline: True
            pos_hint: {"center_x": .5, "center_y": .15}
            on_release:
                root.parent.parent.parent.parent.parent.parent.parent.display_loading_screen()
                root.parent.parent.parent.parent.parent.parent.parent.reset_password(email.text)

<MyBackdropBackLayer@Screen>

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)


        AKOnboarding:
            id: boarding
            circles_size: dp(15)
            circles_color: utils.get_color_from_hex("#8EADFF")
            MyAKOnboardingItem:
                source: "resources/welcome3.png"
                text: "All your workouts in one place"
                title:'Fit Master'

            MyAKOnboardingItem:
                source: "resources/welcome1.png"
                text: "Instant view of previous exercise performance"
                title:'Train Smarter'

            MyAKOnboardingItem:
                source: "resources/welcome2.png"
                text: "Fast loading similar sessions\ninto ongoing one"
                title:'Stay Focused'


<LoginScreen>:

    MDBackdrop1:
        id: backdrop
        radius:50
        header_text: ""
        on_open:
            root.on_open()

        on_close:
            root.on_close()

        MDBackdropBackLayer:
            MyBackdropBackLayer:
                id: backlayer

        MDBackdropFrontLayer:
            MyBackdropFrontLayer:
                id: frontlayer
                backdrop: backdrop
                backlayer: backlayer