<CreateAccountScreen>:
    FloatLayout:

        MDLabel:
            id: sub_title
            pos_hint: {"center_x": 0.5, "top": .95}
            size_hint: (.5, .2)
            theme_text_color: "Primary"
            font_style: "H5"
            halign: "center"
            text: "Sign Up"

        MDTextField:
            id: email
            pos_hint: {"x": .25, "top": .7}
            size_hint: (.5, .1)
            halign: "center"
            hint_text: "Email"


        MDTextField:
            id: password
            password: "True"
            pos_hint: {"x": .25, "top": .6}
            size_hint: (.5, .1)
            halign: "center"
            hint_text: "Password"


        MDRaisedButton:
            pos_hint: {"x": .35, "y": .3}
            size_hint: (.3, .1)
            text: "Create Account"
            on_release:
#                app.change_screen("main_app_screen")
                root.parent.parent.sign_up(email.text, password.text)
                Animation(opacity=0, duration=0.5).start(message)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True
                print("***************")
                print(root)
                print(root.parent)
                print(root.parent.parent)
                print("***************")
                root.parent.parent.display_loading_screen()

        MDRaisedButton:
            opacity: 0
            id: sign_in_button
            pos_hint: {"x": .75, "y": .02}
            size_hint: (.2, .2/3)
            text: "Sign in"
            disabled: True
            on_release:
                root.parent.current = "sign_in_screen"
                root.parent.parent.ids.sign_in_screen.ids.email.text = email.text
                root.parent.parent.ids.sign_in_screen.ids.password.text = password.text

        MDRaisedButton:
            pos_hint: {"x": .75, "y": .02}
            size_hint: (.2, .2/3)
            text: "Back"
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                root.parent.current = root.parent.current = "welcome_screen"
                root.parent.transition = SlideTransition(direction="left")

        MDLabel:
            id: message
            pos_hint: {"center_x": .5, "top": .02}
            size_hint: (.5, .1)
            halign: "center"
