<WelcomeScreen>:
    FloatLayout:

        MDLabel:
            id: sub_title
            pos_hint: {"center_x": 0.5, "top": .85}
            size_hint: (.5, .2)
            theme_text_color: "Primary"
            font_style: "H5"
            halign: "center"
            text: "Welcome Dear Trainer!"

        MDRaisedButton:
            id: log_in_button
            pos_hint: {"x": .35, "y": .42}
            size_hint: (.3, .1)
            text: "Log in"
            on_release: root.parent.current = "sign_in_screen"

        MDIconButton:
            id: log_in_with_google
            pos_hint: {"x": .45, "y": .55}
            icon: "google"
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_release: root.parent.parent.login_with_google()

        MDRaisedButton:
            id: create_account_button
            pos_hint: {"x": .35, "y": .29}
            size_hint: (.3, .1)
            text: "Sign Up"
            on_release: root.parent.current = "create_account_screen"
    #            on_release: root.is_binary(binary_number.text)
