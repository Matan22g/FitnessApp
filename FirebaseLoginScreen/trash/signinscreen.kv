#:import Snackbar kivymd.uix.snackbar.Snackbar

<SignInScreen>:
    FloatLayout:

        MDLabel:
            id: sub_title
            pos_hint: {"center_x": 0.5, "top": .95}
            size_hint: (.5, .2)
            theme_text_color: "Primary"
            font_style: "H5"
            halign: "center"
            text: "Sign in"

        MDTextField:
            id: email
            pos_hint: {"x": .25, "top": .7}
            size_hint: (.5, .1)
            halign: "center"
            hint_text: "Email/User Name"

        MDTextField:
            id: password
            password: "True"
            pos_hint: {"x": .25, "top": .6}
            size_hint: (.5, .1)
            halign: "center"
            hint_text: "Password"


        MDRaisedButton:
            pos_hint: {"x": .55, "y": .3}
            size_hint: (.3, .1)
            text: "Log in"
            on_release:
#                app.change_screen("main_app_screen")
                root.parent.parent.display_loading_screen()
                root.parent.parent.sign_in(email.text, password.text)
                Animation(opacity=0, duration=0.5).start(message)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True

        MDRaisedButton:
            pos_hint: {"x": .17, "y": .3}
            size_hint: (.3, .1)
            text: "Reset Password"
            on_release:
#                app.change_screen("main_app_screen")
                root.parent.parent.display_loading_screen()
                root.parent.parent.reset_password(email.text)
                Animation(opacity=0, duration=0.5).start(message)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True

        MDRaisedButton:
            pos_hint: {"x": .75, "y": .02}
            size_hint: (.2, .2/3)
            text: "Back"
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                root.parent.current = root.parent.current = "welcome_screen"
                root.parent.transition = SlideTransition(direction="left")

        MDLabel:
            id: message
            pos_hint: {"center_x": .5, "top": .1}
            size_hint: (.5, .1)
            halign: "center"


        MDRaisedButton:
            opacity: 0
            id: sign_in_button
            pos_hint: {"x": .25, "y": .1}
            size_hint: (.2, .2/3)
            text: "Sign Up"
            disabled: True
            on_release:
                root.parent.current = "create_account_screen"
                root.parent.parent.ids.create_account_screen.ids.email.text = email.text
                root.parent.parent.ids.create_account_screen.ids.password.text = password.text




